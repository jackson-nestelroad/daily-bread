{
  "name": "daily-bread",
  "version": "1.0.0",
  "description": "TypeScript library for reading the Bible.",
  "author": "jackson-nestelroad",
  "license": "ISC",
  "keywords": [
    "bible",
    "scripture",
    "christian"
  ],
  "files": [
    "build/**/*.js",
    "build/**/*.js.map",
    "build/**/*.d.ts",
    "!build/**/*.spec.*"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node build/index.js",
    "test": "npm run build && mocha --parallel build/*.spec.js build/**/*.spec.js",
    "dryrun": "npm pack --dry-run"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "cheerio": "^1.0.0-rc.12",
    "typescript": "^5.0.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.10",
    "chai": "^4.3.7",
    "eslint": "^8.36.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "prettier": "^2.8.6"
  }
}
