{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "NodeNext",
    "lib": ["ES2018", "ES2019", "ES2020.String"],
    "types": ["mocha", "node"],
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": false,
    "noLib": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "outDir": "./build",
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./cli/**/*"],
  "exclude": ["node_modules"]
}
